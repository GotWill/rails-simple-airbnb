<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <h1>Welcome</h1>
  <%= link_to "Create your flat", new_flat_path, class: "btn btn-primary" %>
</div>


<div class="container  mt-5">
  <div class="row justify-content-center backgroung">
    <div class="col-12 col-sm-4">
      <form action="">
        <!-- Your form content -->
         <h1>Cria novo flat</h1>
          <div class="form-row">
            <%= form_for (@flat) do |f|  %>
                <div class="form-group w-100">
                    <%= f.label :name %>
                    <%=f.text_field :name, class:"form-control w-100"    %>
                </div>
                <div class=" form-group w-100">
                    <%= f.label :address  %>
                    <%= f.text_field :address,  class:"form-control" %>
                </div>
                    <div class="form-group w-100">
                        <%= f.label :description %>
                       <%= f.text_field :description, class: 'form-control ' %> 
                    </div>

                     <div class="form-group w-100">
                        <%= f.label :number_of_guests %>
                        <%= f.text_field :number_of_guests, class: 'form-control' %>
                    </div>

                     <div class="form-group w-100">
                        <%= f.label :price_per_night %>
                       <%= f.text_field :price_per_night, class: 'form-control' %>
                    </div>
        </div>
        <div class=' mt-2'>
            <%= f.submit class: 'btn btn-primary ' %>
            <span><%= link_to 'voltar', flats_path, class: 'btn btn-dark' %></span>
        </div>
        <% end %>
      </form>
    </div>
  </div>
</div>