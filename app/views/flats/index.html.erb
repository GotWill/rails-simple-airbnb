<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <h1>Welcome</h1>
  <%= link_to "Create your flat", new_flat_path, class: "btn btn-primary" %>

</div>


<div class='container d-flex justify-content-around mt-5 ' >
    <% @flats.each do |flat| %>
            <div class="card color" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= flat.name %></h5>
                    <p class="card-text"><%= flat.description %></p>
                </div>
                <div class='mb-3 d-flex justify-content-around'>
                <i class="fa-solid fa-user"><%= flat.number_of_guests %></i>
                <i class="fa-solid fa-square-dollar"><%= flat.price_per_night  %></i>
                </div>
                <div class="d-flex justify-content-between white">
                <span> <%= link_to 'Ver', flat_path(flat), class: 'btn btn-info'%><span>
                <span><%= link_to 'Editar', edit_flat_path(flat), class: 'btn btn-success'%> </span>
                <span> <%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger ' %></span>
                </div>
            </div>
    <% end %>
</div>